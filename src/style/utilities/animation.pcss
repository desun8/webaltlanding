:root {
  --trans: {
    transition: all 200ms ease;
  };

  --trans-slow: {
    transition: all 300ms ease-out;
  };

  --link-underline: {
    position: relative;

    &::after {
      @apply --trans;

      content: '';
      position: absolute;
      left: 0;
      bottom: -5px;
      width: 0;
      height: 2px;
      background-color: #fff;
    }

    &:hover::after {
      @media (--notTablet) {
        width: 100%;
      }
    }
  };
}
